@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employees";
}

<h1>All Employees</h1>

<a asp-controller="Employee" asp-action="create" class="btn btn-primary">ADD NEW Employee</a>
<hr />

@if (Model.Count() > 0)
{
    @Html.Partial("_ErrorSuccess")
    ;
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(E =>E.FName)</th>
                <th scope="col">@Html.DisplayNameFor(E => E.LName)</th>
                <th scope="col">@Html.DisplayNameFor(E =>E.Age)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>

                    <td>@employee.FName</td>
                    <td>@employee.LName</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning"><i class="fa-solid fa-eye"></i> Details</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" class="btn btn-success"><i class="fa-regular fa-pen-to-square"></i> Update</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}
else
{

}


