@model Department
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
@Html.Partial("_ErrorSuccess")
<form method="post" action="/Department/Update">
    <div class="mb-3">
        <label asp-for="Code" class="form-label"></label>
        <input asp-for="Code" class="form-control">
        <span asp-validation-for="Code"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfCreation" class="form-label"></label>
        <input asp-for="DateOfCreation" class="form-control">
        <span asp-validation-for="DateOfCreation"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-route-id="@Model.Id">Submit</button>
</form>
