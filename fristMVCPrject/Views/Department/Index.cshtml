
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Deparments";
}

<h1>Deparments</h1>

<a asp-controller="Department" asp-action="create" class="btn btn-primary">ADD NEW DEPARTMENT</a>
<hr />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(D => D.Code)</th>
                <th scope="col">@Html.DisplayNameFor(D =>D.Name)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning"><i class="fa-solid fa-eye"></i> Details</a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Update" asp-route-id="@department.Id" class="btn btn-success"><i class="fa-regular fa-pen-to-square"></i> Update</a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   

}
else
{

}


